<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Vue Liste des Types de Chambres -->
        <record id="hotel_room_type_list_view" model="ir.ui.view">
            <field name="name">hotel.room.type.list</field>
            <field name="model">hotel.room.type</field>
            <field name="arch" type="xml">
                <list string="Types de chambres" decoration-muted="not active">
                    <field name="sequence" widget="handle" string="Ordre" />
                    <field name="name" string="Nom du type de chambre" />
                    <field name="bed_type" string="Type de lit" />
                    <field name="capacity" string="Capacité standard" />
                    <field name="max_occupancy" string="Occupation maximale" />
                    <field name="surface_area" string="Superficie (m²)" />
                    <field name="view_type" string="Vue" />
                    <field name="room_count" string="Nombre de chambres" />
                    <field name="active" invisible="1" />
                </list>
            </field>
        </record>


        <!-- Vue Formulaire des Types de Chambres -->
        <record id="hotel_room_type_form_view" model="ir.ui.view">
            <field name="name">hotel.room.type.form</field>
            <field name="model">hotel.room.type</field>
            <field name="arch" type="xml">
                <form string="Type de Chambre">
                    <header>
                        <button name="toggle_active" type="object"
                            string="Archiver" class="btn-secondary"
                            invisible="not active" />
                        <button name="toggle_active" type="object"
                            string="Désarchiver" class="btn-secondary"
                            invisible="active" />
                    </header>
                    <sheet>
                        <field name="image" widget="image" class="oe_avatar"
                            options="{'preview_image': 'image', 'size': [90, 90]}" />

                        <div class="oe_title">
                            <label for="name" class="oe_edit_only" />
                            <h1>
                                <field name="name" required="1" />
                            </h1>
                        </div>

                        <group>
                            <group name="general_info" string="Informations générales">
                                <field name="sequence" string="Ordre d’affichage" />
                                <field name="active" string="Actif" />
                                <field name="capacity" string="Capacité standard" />
                                <field name="max_occupancy" string="Occupation maximale" />
                            </group>
                            <group name="physical_info" string="Détails physiques">
                                <field name="bed_type" string="Type de lit" />
                                <field name="surface_area" string="Superficie (m²)" />
                                <field name="flooring_type" string="Type de sol" />
                                <field name="view_type" string="Vue" />
                            </group>
                           
                        </group>

                       <group name="policies" string="Politiques et conditions">
                            <group name="policy_left" string="Autorisations">
                                <field name="is_smoking_allowed" string="Fumeurs autorisés ?" />
                                <field name="is_pets_allowed" string="Animaux autorisés ?" />
                            </group>
                            <group name="time_limits" string="Heures limites">
                                <field name="early_checkin_hour_limit" widget="float_time" string="Limite Check-in anticipé" />
                                <field name="late_checkout_hour_limit" widget="float_time" string="Limite Check-out tardif" />
                            </group>
                        </group>


                        <notebook>
                            <page string="Description">
                                <field name="description"
                                    placeholder="Description détaillée du type de chambre..." />
                            </page>

                            <page string="Équipements">
                                <field name="amenity_ids" widget="many2many_tags" />
                            </page>

                            <page string="Types de Réservation">
                                <group>
                                    <field name="reservation_type_ids" widget="many2many_tags" />
                                </group>
                            </page>

                            <page string="Créneaux personnalisés" name="reservation">
                                <field name="reservation_slots_ids" string="Créneaux de réservation">
                                    <list string="Créneaux" editable="bottom">
                                        <field name="name" string="Nom du créneau" />
                                        <field name="reservation_type_id" string="Type de réservation" />
                                        <field name="checkin_time" widget="float_time" string="Heure d’arrivée" />
                                        <field name="checkout_time" widget="float_time" string="Heure de départ" />
                                    </list>
                                </field>
                            </page>

                           <page string="Politiques Early / Late">
                                <field name="policy_ids" context="{'default_room_type_id': id}">
                                    <list string="Politiques Early/Late" editable="bottom">
                                        <field name="reservation_mode" string="Mode de réservation" />
                                        <field name="rule_type" string="Type de règle" />
                                        <field name="start_hour" widget="float_time" string="Heure de début" />
                                        <field name="end_hour" widget="float_time" string="Heure de fin" />
                                        <field name="surcharge_percent" string="Majoration (%)" />
                                        <field name="is_full_night" string="Facturer nuit complète ?" />
                                    </list>

                                    <form string="Règle Early/Late">
                                        <group>
                                            <field name="reservation_mode" string="Mode de réservation" />
                                            <field name="rule_type" string="Type de règle" />
                                            <field name="start_hour" widget="float_time" string="Heure de début" />
                                            <field name="end_hour" widget="float_time" string="Heure de fin" />
                                            <field name="surcharge_percent" string="Majoration (%)" />
                                            <field name="is_full_night" string="Facturer nuit complète ?" />
                                            <field name="notes" string="Remarques" />
                                        </group>
                                    </form>
                                </field>
                            </page>


                            <page string="Tarifications">
                                <field name="room_pricing_ids"
                                    context="{'default_room_type_id': id}">
                                    <list string="Tarifications" editable="bottom">
                                        <field name="reservation_type_id" required="1" string="Type de réservation" />
                                        <field name="pricing_mode" widget="selection" string="Mode de tarification" />

                                        <field name="price_value" string="Montant"
                                               widget="monetary"
                                               options="{'currency_field': 'currency_id'}"
                                               invisible="pricing_mode == 'percentage'" />

                                        <field name="price_value" string="Pourcentage"
                                               widget="percentage"
                                               options="{'currency_field': 'currency_id'}"
                                               invisible="pricing_mode != 'percentage'" />

                                        <field name="min_hours" string="Durée minimale (heures)"
                                               invisible="pricing_mode != 'hourly'" />
                                        <field name="active" string="Actif" />
                                    </list>

                                    <form string="Tarification">
                                        <group>
                                            <field name="reservation_type_id" string="Type de réservation" />
                                            <field name="pricing_mode" string="Mode de tarification" />
                                            <field name="price_value" string="Valeur / Pourcentage" />
                                            <field name="min_hours" string="Durée minimale (heures)" />
                                            <field name="currency_id" string="Devise" />
                                            <field name="active" string="Actif" />
                                        </group>
                                    </form>
                                </field>
                            </page>


                            <page string="Galerie d'Images">
                                <field name="room_image_ids">
                                    <list string="Images" editable="bottom">
                                        <field name="image" widget="image"
                                            options="{'size': [64, 64]}" />
                                        <field name="description" />
                                    </list>
                                </field>
                            </page>

                           <page string="Chambres associées">
                                <field name="room_ids">
                                    <list string="Chambres" create="true" delete="true">
                                        <field name="name" placeholder="Numéro de chambre" string="Nom / Numéro" />
                                        <field name="floor_id" string="Étage" />
                                        <field name="status" widget="selection" string="Statut" />
                                        <field name="is_in_maintenance" string="En maintenance ?" />
                                        <field name="last_maintenance_date" string="Dernière maintenance" />
                                    </list>
                                </field>
                                <group>
                                    <field name="room_count" readonly="1" string="Nombre total de chambres" />
                                </group>
                            </page>
                        </notebook>

                    </sheet>
                </form>
            </field>
        </record>

        <!-- Actions -->
        <record id="hotel_room_type_action" model="ir.actions.act_window">
            <field name="name">Types de Chambres</field>
            <field name="res_model">hotel.room.type</field>
            <field name="view_mode">list,form</field>
            <field name="view_id" ref="hotel_room_type_list_view" />
        </record>


        <!-- Menus -->
        <menuitem id="hotel_room_type_menu"
            name="Types de Chambres"
            parent="hotel_management_odoo.hotel_config_menu"
            action="hotel_room_type_action"
            sequence="10" />

    </data>
</odoo>