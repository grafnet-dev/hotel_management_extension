<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Vue Liste des Types de Chambres -->
        <record id="hotel_room_type_list_view" model="ir.ui.view">
            <field name="name">hotel.room.type.list</field>
            <field name="model">hotel.room.type</field>
            <field name="arch" type="xml">
                <list string="Types de Chambres" decoration-muted="not active">
                    <field name="sequence" widget="handle"/>
                    <field name="name"/>
                    <field name="bed_type"/>
                    <field name="capacity"/>
                    <field name="max_occupancy"/>
                    <field name="surface_area"/>
                    <field name="view_type"/>
                    <field name="base_price" widget="monetary"/>
                    <field name="room_count"/>
                    <field name="active" invisible="1"/>
                    
                </list>
            </field>
        </record>

        <!-- Vue Formulaire des Types de Chambres -->
        <!-- Vue Formulaire des Types de Chambres -->
        <record id="hotel_room_type_form_view" model="ir.ui.view">
            <field name="name">hotel.room.type.form</field>
            <field name="model">hotel.room.type</field>
            <field name="arch" type="xml">
                <form string="Type de Chambre">
                    <header>
                        <button name="toggle_active" type="object" 
                                string="Archiver" class="btn-secondary"
                                invisible="not active"/>
                        <button name="toggle_active" type="object" 
                                string="Désarchiver" class="btn-secondary"
                                invisible="active"/>
                    </header>
                    <sheet>
                        <field name="image" widget="image" class="oe_avatar" 
                            options="{'preview_image': 'image', 'size': [90, 90]}"/>

                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1><field name="name" required="1"/></h1>
                        </div>

                        <group>
                            <group name="general_info">
                                <field name="sequence"/>
                                <field name="active"/>
                                <field name="capacity"/>
                                <field name="max_occupancy"/>
                                <field name="base_price"/>
                            </group>
                            <group name="physical_info">
                                <field name="bed_type"/>
                                <field name="surface_area"/>
                                <field name="flooring_type"/>
                                <field name="view_type"/>
                            </group>
                        </group>

                        <group name="policies">
                            <group name="policy_left">
                                <field name="is_smoking_allowed"/>
                                <field name="is_pets_allowed"/>
                            </group>
                            <group name="time_limits">
                                <field name="early_checkin_hour_limit" widget="float_time"/>
                                <field name="late_checkout_hour_limit" widget="float_time"/>
                            </group>
                        </group>

                        
                        <notebook>
                                <page string="Description">
                                    <field name="description" placeholder="Description détaillée du type de chambre..."/>
                                </page>

                                <page string="Équipements">
                                    <field name="amenity_ids" widget="many2many_tags"/>
                                </page>

                                <page string="Types de Réservation">
                                    <group>
                                        <field name="reservation_type_ids" widget="many2many_tags"/>
                                    </group>
                                </page>

                                <page string="Créneaux Personnalisés" name='reservation'>
                                    <field name="reservation_slots_ids">
                                        <list string="Créneaux" editable="bottom">
                                            <field name="name"/>
                                            <field name="reservation_type_id"/>
                                            <field name="checkin_time" widget="float_time"/>
                                            <field name="checkout_time" widget="float_time"/>
                                        </list>
                                    </field>
                                </page>

                                <page string="Tarifications">
                                    <field name="room_pricing_ids">
                                        <list string="Tarifications" editable="bottom">
                                            <field name="reservation_type_id"/>
                                            <field name="price" widget="monetary"/>
                                            <!--<field name="hourly_price"/>-->
                                        </list>
                                    </field>
                                
                                </page>

                                <page string="Galerie d'Images">
                                    <field name="room_image_ids">
                                        <list string="Images" editable="bottom">
                                            <field name="image" widget="image" 
                                                options="{'size': [64, 64]}"/>
                                            <field name="description"/>
                                        </list>
                                    </field>
                                </page>

                                <page string="Chambres">
                                    <field name="room_ids">
                                        <list string="Chambres" create="true" delete="true">
                                            <field name="name" placeholder="Numéro de chambre"/>
                                            <field name="floor_id"/>
                                            <field name="status" widget="selection"/>
                                            <field name="is_in_maintenance"/>
                                            <field name="last_maintenance_date"/>
                                        </list>
                                    </field>
                                    <group>
                                        <field name="room_count" readonly="1"/>
                                    </group>
                                </page>
                        </notebook>
                        
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Actions -->
        <record id="hotel_room_type_action" model="ir.actions.act_window">
            <field name="name">Types de Chambres</field>
            <field name="res_model">hotel.room.type</field>
            <field name="view_mode">list,form</field>
            <field name="view_id" ref="hotel_room_type_list_view"/>
        </record>

      

        <!-- Menus -->
        <menuitem id="hotel_room_type_menu" 
                  name="Types de Chambres" 
                  parent="hotel_management_odoo.hotel_config_menu" 
                  action="hotel_room_type_action" 
                  sequence="10"/>

    </data>
</odoo>