<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_form_hotel_police_form" model="ir.ui.view">
        <field name="name">hotel.police.form.view.form</field>
        <field name="model">hotel.police.form</field>
        <field name="arch" type="xml">
            <form string="Fiche de police - Enregistrement Client">
                
                <!-- Informations occupant -->
                <group string="Identité de l'occupant">
                    <field name="first_name"/>
                    <field name="last_name"/>
                    <field name="gender"/>
                    <field name="date_of_birth"/>
                    <field name="place_of_birth"/>
                    <field name="nationality"/>
                    <field name="street"/>
                    <field name="zip"/>
                    <field name="city"/>
                    <field name="country_id"/>
                </group>

                <!-- Pièce d'identité -->
                <group string="Pièce d'identité">
                    <field name="id_type"/>
                    <field name="id_number"/>
                    <field name="id_issue_date"/>
                    <field name="id_expiry_date"/>
                    <field name="id_issue_place"/>
                    <field name="id_document_file" filename="id_document_filename"/>
                </group>

                <!-- Informations sur le séjour -->
                <group string="Séjour">
                    <field name="arrival_date"/>
                    <field name="arrival_time"/>
                    <field name="departure_date"/>
                    <field name="number_of_guests"/>
                    <field name="room_id"/>
                </group>

                <!-- Informations complémentaires -->
                <group string="Compléments">
                    <field name="stay_purpose"/>
                    <field name="arrival_transport"/>
                    <field name="signature"/>
                    <field name="signature_date"/>
                </group>

                <!-- Observations -->
                <group string="Observations">
                    <field name="notes"/>
                </group>

                <!-- Footer -->
                <footer>
                    <button name="action_validate_police_form"
                            string="Valider et passer au Check-In"
                            type="object"
                            class="btn-primary"/>
                    <button string="Annuler"
                            special="cancel"
                            class="btn-secondary"/>
                </footer>

            </form>
        </field>
    </record>
</odoo>
