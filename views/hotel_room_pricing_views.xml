<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Vue liste pour hotel.room.pricing -->
    <record id="view_hotel_room_pricing_tree" model="ir.ui.view">
        <field name="name">hotel.room.pricing.list</field>
        <field name="model">hotel.room.pricing</field>
        <field name="arch" type="xml">
            <list editable="bottom">
                <field name="reservation_type_id" options="{'no_create_edit': True}"/>
                <field name="is_hourly_based" readonly="1"/>
                <field name="price" string="Prix de base"/>
                <field name="price_per_block" string="Prix/Bloc"/>
                <field name="block_duration" string="Durée bloc (h)"/>
                <field name="night_extra_percent" string="Majoration nuit (%)"/>
                <field name="currency_id" invisible="1"/>
            </list>
        </field>
    </record>

    <!-- Vue formulaire pour hotel.room.pricing -->
    <record id="view_hotel_room_pricing_form" model="ir.ui.view">
        <field name="name">hotel.room.pricing.form</field>
        <field name="model">hotel.room.pricing</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group string="Type de réservation">
                            <field name="reservation_type_id" options="{'no_create_edit': True}"/>
                            <field name="is_hourly_based" readonly="1"/>
                            <field name="currency_id"/>
                        </group>
                        
                        <group string="Tarification fixe" 
                               invisible="is_hourly_based == True">
                            <field name="price" string="Prix fixe"/>
                        </group>
                        
                        <group string="Tarification par blocs horaires" 
                               invisible="is_hourly_based == False">
                            <field name="price_per_block" string="Prix par bloc"/>
                            <field name="block_duration" string="Durée du bloc (heures)"/>
                            <field name="night_extra_percent" string="Majoration de nuit (%)"/>
                            <div class="alert alert-info" role="alert">
                                <strong>Exemple :</strong> 60€ pour 6 heures = 60€/bloc avec durée de 6h<br/>
                                <strong>Majoration nuit :</strong> S'applique si la réservation couvre 22h-6h
                            </div>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>