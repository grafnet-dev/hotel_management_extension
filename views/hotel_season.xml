<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_hotel_season_tree" model="ir.ui.view">
        <field name="name">hotel.season.list</field>
        <field name="model">hotel.season</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="date_start"/>
                <field name="date_end"/>
                <field name="priority"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <record id="view_hotel_season_form" model="ir.ui.view">
        <field name="name">hotel.season.form</field>
        <field name="model">hotel.season</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="priority"/>
                    </group>
                    <group>
                        <field name="date_start"/>
                        <field name="date_end"/>
                        <field name="active"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_hotel_season" model="ir.actions.act_window">
        <field name="name">Seasons</field>
        <field name="res_model">hotel.season</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_hotel_season"
              name="Saisons"
              parent="hotel_management_odoo.hotel_config_menu"
              action="action_hotel_season"/>
</odoo>
