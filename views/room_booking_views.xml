<odoo>
    <data>
        <record id="view_room_booking_form_inherit_minimal" model="ir.ui.view">
            <field name="name">room.booking.form.inherit.minimal</field>
            <field name="model">room.booking</field>
            <field name="inherit_id" ref="hotel_management_odoo.room_booking_view_form"/>
            <field name="mode">extension</field>
            <field name="arch" type="xml">

                <!-- Remplacer TOUT le contenu du formulaire -->
                <xpath expr="//form" position="replace">
                    <form>
                        <header>
                            <button name="action_view_booking_stays"
                                type="object"
                                string="Séjours"
                                class="btn-secondary"
                                icon="fa-hotel"/>
                        </header>
                        <sheet>
                            <group>
                                <label string="Cliquez sur 'Séjours' pour gérer les séjours."/>
                            </group>
                        </sheet>
                    </form>
                </xpath>

            </field>
        </record>
    </data>
</odoo>
