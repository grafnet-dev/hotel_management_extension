<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_hotel_pricing_rule_tree" model="ir.ui.view">
        <field name="name">hotel.pricing.rule.list</field>
        <field name="model">hotel.pricing.rule</field>
        <field name="arch" type="xml">
            <list>
                <field name="room_type_id" string="Type de chambre"/>
                <field name="reservation_type_id" string="Type de réservation"/>
                <field name="season_id" string="Saison"/>
                <field name="unit" string="Unité"/>
                <field name="price" string="Prix" invisible="is_flexible == True"/>
                <field name="currency_id" string="Devise"/>
                <field name="active" string="Actif"/>
            </list>
        </field>
    </record>

    <record id="view_hotel_pricing_rule_form" model="ir.ui.view">
        <field name="name">hotel.pricing.rule.form</field>
        <field name="model">hotel.pricing.rule</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="room_type_id" string="Type de chambre"/>
                            <field name="reservation_type_id" string="Type de réservation"/>
                            <field name="season_id" string="Saison"/>
                        </group>
                        <group>
                            <field name="unit" string="Unité"/>
                            <field name="currency_id" string="Devise"/>
                            <field name="active" string="Actif"/>
                        </group>
                    </group>

                    <!-- Prix direct si non flexible -->
                    <group invisible="is_flexible == True">
                         <field name="price" string="Prix"/>
                    </group>

                    <!-- Onglet lignes si flexible -->
                    <notebook invisible="is_flexible == False">
                        <page string="Lignes tarifaires">
                            <field name="line_ids">
                                <list editable="bottom">
                                    <field name="min_duration" string="Durée minimale"/>
                                    <field name="max_duration" string="Durée maximale"/>
                                    <field name="price" string="Prix"/>
                                    <field name="currency_id" string="Devise" invisible="1"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_hotel_pricing_rule" model="ir.actions.act_window">
        <field name="name">Règles tarifaires</field>
        <field name="res_model">hotel.pricing.rule</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_hotel_pricing_rule"
        name="Règles tarifaires"
        parent="hotel_management_odoo.hotel_config_menu"
        action="action_hotel_pricing_rule" />
</odoo>