<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
       
        <!-- Actions spécifiques pour les filtres -->
        <record id="action_hotel_police_today_arrivals" model="ir.actions.act_window">
            <field name="name">Arrivées du jour</field>
            <field name="res_model">hotel.police.form</field>
            <field name="view_mode">list,form</field>
            <field name="view_id" ref="view_hotel_police_form_list"/>
            <field name="context">{'search_default_today_arrivals': 1}</field>
        </record>
        
        <record id="action_hotel_police_today_departures" model="ir.actions.act_window">
            <field name="name">Départs du jour</field>
            <field name="res_model">hotel.police.form</field>
            <field name="view_mode">list,form</field>
            <field name="view_id" ref="view_hotel_police_form_list"/>
            <field name="context">{'search_default_today_departures': 1}</field>
        </record>

         
        <!-- Menu principal pour les Fiches de Police -->
        <menuitem id="menu_hotel_police_root"
                  name="Fiches de Police"
                  parent="base.menu_administration"
                  sequence="30"/>
        
        <!-- Sous-menu: Toutes les fiches -->
        <menuitem id="menu_hotel_police_all"
                  name="Toutes les fiches"
                  parent="menu_hotel_police_root"
                  action="action_hotel_police_form"
                  sequence="10"/>
        
        <!-- Sous-menu: Arrivées du jour -->
        <menuitem id="menu_hotel_police_today_arrivals"
                  name="Arrivées du jour"
                  parent="menu_hotel_police_root"
                  action="action_hotel_police_today_arrivals"
                  sequence="20"/>
        
        <!-- Sous-menu: Départs du jour -->
        <menuitem id="menu_hotel_police_today_departures"
                  name="Départs du jour"
                  parent="menu_hotel_police_root"
                  action="action_hotel_police_today_departures"
                  sequence="30"/>
        

    </data>
</odoo>