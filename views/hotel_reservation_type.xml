<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Vue Liste des Types de Réservation -->
        <record id="hotel_reservation_type_list_view" model="ir.ui.view">
            <field name="name">hotel.reservation.type.list</field>
            <field name="model">hotel.reservation.type</field>
            <field name="arch" type="xml">
                <list string="Types de Réservation" decoration-muted="not active">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="is_flexible"/>
                    <field name="active" invisible="1"/>
                </list>
            </field>
        </record>

        <!-- Vue Formulaire des Types de Réservation -->
        <record id="hotel_reservation_type_form_view" model="ir.ui.view">
            <field name="name">hotel.reservation.type.form</field>
            <field name="model">hotel.reservation.type</field>
            <field name="arch" type="xml">
                <form string="Type de Réservation">
                    <header>
                        <button name="toggle_active" type="object"
                                string="Archiver" class="btn-secondary"
                                invisible="not active"/>
                        <button name="toggle_active" type="object"
                                string="Désarchiver" class="btn-secondary"
                                invisible="active"/>
                    </header>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                            <field name="is_flexible"/>
                            <field name="active"/>
                        </group>
                        <group>
                            <field name="description"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Action -->
        <record id="hotel_reservation_type_action" model="ir.actions.act_window">
            <field name="name">Types de Réservation</field>
            <field name="res_model">hotel.reservation.type</field>
            <field name="view_mode">list,form</field>
            <field name="view_id" ref="hotel_reservation_type_list_view"/>
        </record>

        <!-- Menu -->
        <menuitem id="hotel_reservation_type_menu"
                  name="Types de Réservation"
                  parent="hotel_management_odoo.hotel_config_menu"
                  action="hotel_reservation_type_action"
                  sequence="20"/>
    </data>
</odoo>
