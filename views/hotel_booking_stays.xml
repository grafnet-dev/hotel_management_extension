                        <page string="üí∞ Prix &amp; Facturation" name="pricing">
                            <group>
                                <group name="currency_info" string="Devise">
                                    <field name="currency_id"
                                        options="{'no_create': True, 'no_create_edit': True}" />
                                </group>
                                <group name="room_pricing" string="Tarification Chambre">
                                    <field name="room_price_total" string="Total Chambre"
