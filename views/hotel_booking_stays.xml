                                        <field name="ticket_id" string="Type de Ticket" />
                                        <field name="uom_qty" string="Quantit√©" />
                                        <field name="price_unit" string="Prix Unit." />
                                        <field name="price_subtotal" string="Sous-total"
                                            sum="Total √âv√©nements" />
                                    </list>
                                    <form>
                                        <group>
