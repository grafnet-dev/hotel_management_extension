                                    <field name="uom_id" string="Unit√©" readonly="1" />
                                </group>
                            </group>

                            <separator string="‚è∞ Options Horaires Sp√©ciales" />
                            <group>
                                <group name="early_options" string="Early Check-in">
                                    <field name="early_checkin_requested" string="Demand√©" />
                                    <field name="early_checkin_hour" string="Heure Souhait√©e"
