<?xml version="1.0" encoding="utf-8"?>
<templates xml:space="preserve">
  <t t-name="reception_standalone_app.RoomsPage">
    <div class="grid grid-cols-3 gap-4 h-full p-4">
      <!-- Liste -->
      <div class="col-span-2">
       <RoomTypeList
  roomTypes="state.rooms.list"
  onSelectRoomType="(roomType) => this.onRoomTypeSelect(roomType)"
/>

      </div>

      <!-- Détails -->
      <div class="col-span-1">
       <t t-if="ui.selectedRoomType">
  <RoomTypeDetail roomType="ui.selectedRoomType" />
</t>
<t t-else="">
  <div class="text-gray-400 italic">Sélectionnez une chambre pour voir les détails.</div>
</t>

      </div>
    </div>
  </t>
</templates>