<?xml version="1.0" encoding="utf-8"?>
<templates xml:space="preserve">
<!-- RoomTypeCard -->
<t t-name="reception_standalone_app.RoomTypeCard">
  <div class="p-2 border rounded shadow hover:bg-gray-100 cursor-pointer" t-on-click="onClickCard">
    <img t-att-src="props.roomType.image" class="w-full h-32 object-cover rounded"/>
    <div class="mt-2 font-bold text-lg">
      <t t-esc="props.roomType.name"/>
    </div>
    <div class="text-sm text-gray-600">
      <t t-esc="props.roomType.surface_area"/> m² — <t t-esc="props.roomType.capacity"/> pers
    </div>
    <div class="text-green-700 font-semibold">
      <t t-esc="props.roomType.price_per_night"/> FCFA / nuit
    </div>
  </div>
</t>
</templates>