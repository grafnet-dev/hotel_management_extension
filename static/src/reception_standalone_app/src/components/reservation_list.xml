                      <span class="w-4 text-center">üìÖ</span>
                      <span class="ml-2">
                        <t t-esc="new Date(firstStay.checkin_date).toLocaleDateString('fr-FR', {day: '2-digit', month: 'short'})"/>
                      </span>
                    </div>
                    <div class="flex items-center text-sm text-gray-600">
                      <span class="w-4 text-center">üèÅ</span>
                      <span class="ml-2">
                        <t t-esc="new Date(firstStay.checkout_date).toLocaleDateString('fr-FR', {day: '2-digit', month: 'short'})"/>
                      </span>
                    </div>
                    <t t-set="nights" t-value="Math.ceil((new Date(firstStay.checkout_date) - new Date(firstStay.checkin_date)) / (1000 * 60 * 60 * 24))"/>
                    <div class="text-xs text-amber-600 font-medium">
                      <t t-esc="nights"/> nuit<t t-if="nights > 1">s</t>
                    </div>
                  </div>
                </div>
              </div>

              <!-- Options sp√©ciales -->
              <t t-if="firstStay.early_checkin_requested or firstStay.late_checkout_requested or firstStay.extra_night_required">
