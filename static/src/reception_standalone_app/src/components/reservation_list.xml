                <t t-set="status" t-value="booking.status"/>
                <span t-att-class="'inline-flex items-center px-3 py-1 rounded-full text-sm font-medium ' + 
                  (status === 'confirmed' ? 'bg-green-100 text-green-800' : 
                   status === 'pending' ? 'bg-yellow-100 text-yellow-800' : 
                   status === 'in_progress' ? 'bg-blue-100 text-blue-800' : 
                   'bg-gray-100 text-gray-800')">
                  <t t-if="status === 'confirmed'">‚úÖ Confirm√©</t>
                  <t t-elif="status === 'pending'">‚è≥ En attente</t>
                  <t t-elif="status === 'in_progress'">üè® En cours</t>
                  <t t-else=""><t t-esc="status"/></t>
                </span>

                <div class="text-right">
                  <div class="text-lg font-bold text-amber-600">
                    <t t-esc="Math.round(booking.total_booking_amount / 1000).toLocaleString()"/>k FCFA
                  </div>
                  <div class="text-sm text-gray-500">
                    <t t-esc="booking.stays.length"/> s√©jour<t t-if="booking.stays.length > 1">s</t>
                  </div>
