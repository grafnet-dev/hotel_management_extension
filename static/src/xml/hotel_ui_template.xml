<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="hotel_ui.template" owl="1">
        <div class="o_container">
            <h1>Chambres disponibles</h1>

            <!-- Si aucune chambre encore chargée -->
            <t t-if="rooms.length === 0">
                <p>Chargement...</p>
            </t>

            <!-- Sinon on boucle sur chaque chambre -->
            <t t-foreach="rooms" t-as="room" t-key="room.id">
                <div class="card p-2 my-2 border shadow-sm">
                    <strong><t t-esc="room.name"/></strong><br/>
                    Prix : <t t-esc="room.price"/> FCFA
                    <button class="btn btn-primary btn-sm" t-on-click="() => this.bookRoom(room.id)">
                        Réserver
                    </button>
                </div>
            </t>
        </div>
    </t>
</templates>