<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
  <t t-name="rooms_planning.template" owl="1">
    <div class="o_action o_view_controller o_room_planning">
      <div class="o_content">

        <!-- HEADER -->
        <div class="o_room_planning_header">
          <h2>Planning Hôtel</h2>

          <div class="o_planning_info">

            <!-- Légendes -->
            <div class="o_planning_legends">
              <div class="o_legend_item">
                <span class="o_legend_badge booking"></span>
                <span>Réservation</span>
              </div>
              <div class="o_legend_item">
                <span class="o_legend_badge cleaning"></span>
                <span>Nettoyage</span>
              </div>
              <div class="o_legend_item">
                <span class="o_legend_badge maintenance"></span>
                <span>Maintenance</span>
              </div>
              <div class="o_legend_item">
                <span class="o_legend_badge free_slot"></span>
                <span>Disponible</span>
              </div>
            </div>

            <!-- Statistiques -->
            <div class="o_planning_stats">
              <div class="o_stat_item">
                <span class="o_stat_value">6</span>
                <span class="o_stat_label">Chambres</span>
              </div>
              <div class="o_stat_item">
                <span class="o_stat_value">1</span>
                <span class="o_stat_label">Occupées</span>
              </div>
              <div class="o_stat_item">
                <span class="o_stat_value">75%</span>
                <span class="o_stat_label">Taux</span>
              </div>
            </div>

          </div>
        </div>

        <!-- TIMELINE -->
        <div class="o_room_timeline_wrapper">
          <div id="room-timeline"></div>
        </div>

      </div>
    </div>
  </t>
</templates>
