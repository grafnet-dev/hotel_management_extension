<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
  <t t-name="rooms_planning.template" owl="1">
    <div class="o_action o_view_controller o_room_planning">
      <div class="o_content">
          <div class="o_room_timeline_wrapper">
            
            <!-- ========================================
                 HEADER - Design moderne avec filtres verticaux
                 ======================================== -->
            <div class="o_room_planning_header">
              
              <!-- Titre -->
              <h2>Room Planning</h2>
              
              <!-- Filtres alignés verticalement -->
              <div class="o_room_planning_filters">
                <div class="o_filter_group">
                  <span class="o_filter_label">Type:</span>
                  <select>
                    <option>All Types</option>
                    <option>Booking</option>
                    <option>Cleaning</option>
                    <option>Maintenance</option>
                    <option>Day Use</option>
                  </select>
                </div>
                
                <div class="o_filter_group">
                  <span class="o_filter_label">Status:</span>
                  <select>
                    <option>All Status</option>
                    <option>Confirmed</option>
                    <option>Pending</option>
                    <option>Cancelled</option>
                  </select>
                </div>
                
                <div class="o_filter_group">
                  <span class="o_filter_label">Period:</span>
                  <select>
                    <option>16 Days</option>
                    <option>7 Days</option>
                    <option>14 Days</option>
                    <option>30 Days</option>
                  </select>
                </div>
              </div>
              
              <!-- Actions (boutons) -->
              <div class="o_room_planning_actions">
                <button class="o_planning_btn o_planning_btn_refresh" t-on-click="refreshTimeline">
                  <span>↻</span> Refresh
                </button>
                <button class="o_planning_btn o_planning_btn_new" t-on-click="onNewBooking">
                  <span>+</span> New Booking
                </button>
              </div>
              
            </div>
            
            <!-- ========================================
                 TIMELINE - Zone principale
                 ======================================== -->
            <div id="room-timeline">
              <!-- La timeline vis.js sera injectée ici -->
            </div>
            
            <!-- ========================================
                 FOOTER - Légendes modernes
                 ======================================== -->
            <div class="o_room_timeline_footer">
              
              <div class="o_timeline_legend">
                <span class="o_timeline_legend_label">Legend</span>
                
                <div class="o_timeline_legend_item">
                  <div class="o_timeline_legend_color booking"></div>
                  <span class="o_timeline_legend_text">Booked</span>
                </div>
                
                <div class="o_timeline_legend_item">
                  <div class="o_timeline_legend_color cleaning"></div>
                  <span class="o_timeline_legend_text">Cleaning</span>
                </div>
                
                <div class="o_timeline_legend_item">
                  <div class="o_timeline_legend_color maintenance"></div>
                  <span class="o_timeline_legend_text">Maintenance</span>
                </div>
                
                <div class="o_timeline_legend_item">
                  <div class="o_timeline_legend_color day_use"></div>
                  <span class="o_timeline_legend_text">Day Use</span>
                </div>
              </div>
              
            </div>
            
          </div>
      </div>
    </div>
  </t>
</templates>
