<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
  <t t-name="rooms_planning.template" owl="1">
    <div class="o_action o_view_controller o_room_planning">
      <div class="o_content">
          <div class="o_room_timeline_wrapper">
            
            <!-- ========================================
                 HEADER - En-tête avec titre, boutons et filtres
                 ======================================== -->
            <div class="o_room_planning_header">
              <!-- Titre -->
              <h2>Hotel Room Planning</h2>
              
              <!-- Filtres -->
              <div class="o_room_planning_filters">
                <select>
                  <option>All Types</option>
                  <option>Booking</option>
                  <option>Cleaning</option>
                  <option>Maintenance</option>
                </select>
                
                <select>
                  <option>All Status</option>
                  <option>Confirmed</option>
                  <option>Pending</option>
                  <option>Cancelled</option>
                </select>
                
                <select>
                  <option>16 Days</option>
                  <option>7 Days</option>
                  <option>30 Days</option>
                </select>
              </div>
              
              <!-- Actions (boutons) -->
              <div class="o_room_planning_actions">
                <button class="o_planning_btn o_planning_btn_refresh" t-on-click="refreshTimeline">
                  <span>↻</span> Refresh
                </button>
                <button class="o_planning_btn o_planning_btn_new" t-on-click="onNewBooking">
                  + New Booking
                </button>
              </div>
            </div>
            
            <!-- ========================================
                 TIMELINE - Zone principale
                 ======================================== -->
            <div id="room-timeline">
              <!-- La timeline vis.js sera injectée ici -->
            </div>
            
            <!-- ========================================
                 FOOTER - Légendes
                 ======================================== -->
            <div class="o_room_timeline_footer">
              <div class="o_timeline_legend">
                <span style="margin-right: 8px;">Legend:</span>
                
                <div class="o_timeline_legend_item">
                  <div class="o_timeline_legend_color booking"></div>
                  <span>Booked</span>
                </div>
                
                <div class="o_timeline_legend_item">
                  <div class="o_timeline_legend_color cleaning"></div>
                  <span>Cleaning</span>
                </div>
                
                <div class="o_timeline_legend_item">
                  <div class="o_timeline_legend_color maintenance"></div>
                  <span>Maintenance</span>
                </div>
              </div>
            </div>
            
          </div>
      </div>
    </div>
  </t>
</templates>