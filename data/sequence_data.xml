<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Séquence pour les demandes de maintenance -->
        <record id="seq_maintenance_request" model="ir.sequence">
            <field name="name">Maintenance Request</field>
            <field name="code">maintenance.request</field>
            <field name="prefix">MTN/%(year)s/</field>
            <field name="padding">4</field>
            <field name="company_id" eval="False"/>
        </record>
        
        <!-- Séquence pour les budgets de maintenance -->
        <record id="seq_maintenance_budget" model="ir.sequence">
            <field name="name">Maintenance Budget</field>
            <field name="code">maintenance.budget</field>
            <field name="prefix">BUD/%(year)s/</field>
            <field name="padding">3</field>
            <field name="company_id" eval="False"/>
        </record>
    </data>
</odoo>