    <record id="room_booking_rule_manager" model="ir.rule">
        <field name="name">Room Booking Rule for Manager</field>
        <field name="model_id" ref="hotel_management_odoo.model_room_booking"/>
        <field name="groups" eval="[(4, ref('hotel_management_extension.hotel_group_manager'))]"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="False"/>
    </record>

