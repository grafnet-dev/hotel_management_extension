<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <!-- D'abord définir le modèle si ce n'est pas déjà fait -->
        <record id="model_hotel_police_form" model="ir.model">
            <field name="name">Hotel Police Form</field>
            <field name="model">hotel.police.form</field>
            <field name="description">Fiche de police hôtelière</field>
        </record>

        <!-- Ensuite l'action de rapport -->
       <record id="action_report_hotel_police_form" model="ir.actions.report">
    <field name="name">Fiche de Police</field>
    <field name="model">hotel.police.form</field>
    <field name="report_type">qweb-pdf</field>
    <field name="report_name">hotel_management_extension.report_police_form_template</field>
    <field name="report_file">hotel_management_extension.report_police_form</field>
    <field name="binding_model_id" ref="model_hotel_police_form"/>
    <field name="binding_type">report</field>
    <field name="print_report_name">'Fiche_Police_%s' % ((object.last_name or '') + '_' + (object.first_name or ''))</field>
    <!-- AJOUTER CETTE LIGNE -->
    <field name="attachment_use">False</field>
</record>

    </data>
</odoo>